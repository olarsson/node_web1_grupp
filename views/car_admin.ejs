<link rel="stylesheet" href="/css/style.css">

<div class="form_table">

  <h2>Ny bil</h2>

  <div class="divTable">
    <div class="divTableBody">
      <div class="divTableHeading">
        <div class="divTableHead">Märke</div>
        <div class="divTableHead">Automat</div>
        <div class="divTableHead">Takräcke</div>
        <div class="divTableHead">Säten</div>
        <div class="divTableHead">Pris</div>
      </div>
      <div class="divTableRow">
        <form action="/cars" method="post">
          <div class="divTableCell">
            <select name="typ">
              <option value="volvo">Volvo</option>
              <option value="saab">Saab</option>
              <option value="mercedes">Mercedes</option>
              <option value="audi">Audi</option>
            </select>
          </div>
          <div class="divTableCell">
            <select name="automat">
              <option value="true" selected>Ja</option>
              <option value="false">Nej</option>
            </select>
          </div>
          <div class="divTableCell">
            <select name="rail">
              <option value="true" selected>Ja</option>
              <option value="false">Nej</option>
            </select>
          </div>
          <div class="divTableCell">
            <select name="seats">
              <option value="1" selected>1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5</option>
            </select>
          </div>
          <div class="divTableCell">
            <input type="text" name="price" placeholder="price"><br>
          </div>
          <div class="divTableCell">
            <input type="submit" value="Submit">
          </div>

        </form>
      </div>
    </div>
  </div>


  <h2>Ändra bilar</h2>

  <div class="divTable">
    <div class="divTableBody">
      <div class="divTableHeading">
        <div class="divTableHead">Märke</div>
        <div class="divTableHead">Automat</div>
        <div class="divTableHead">Takräcke</div>
        <div class="divTableHead">Säten</div>
        <div class="divTableHead">Pris</div>
      </div>

      <% for (var i = 0; i < allcars.length; i++) {

console.info(allcars[i])

        %>

        <div class="divTableRow">
          <form data-edit="true" action="/cars/<%= allcars[i]._id %>" method="post">
            <input type="hidden" name="_method" value="delete">

            <div class="divTableCell">
              <select name="typ">
                <option value="volvo" <% if (allcars[i].typ == 'volvo') { %> selected <% } %>>Volvo</option>
                <option value="saab" <% if (allcars[i].typ == 'saab') { %> selected <% } %>>Saab</option>
                <option value="mercedes" <% if (allcars[i].typ == 'mercedes') { %> selected <% } %>>Mercedes</option>
                <option value="audi" <% if (allcars[i].typ == 'audi') { %> selected <% } %>>Audi</option>
              </select>
            </div>
            <div class="divTableCell">
              <select name="automat">
                <option value="true">Ja</option>
                <option value="false" <% if (allcars[i].automat == false) { %> selected <% } %>>Nej</option>
              </select>
            </div>
            <div class="divTableCell">
              <select name="rail">
                <option value="true">Ja</option>
                <option value="false" <% if (allcars[i].rail == false) { %> selected <% } %>>Nej</option>
              </select>
            </div>
            <div class="divTableCell">
              <select name="seats">
                <% for (var s = 1; s <= 5; s++) { %>
                <option value="<%= s %>" <% if (allcars[i].seats == s) { %> selected <% } %>><%= s %></option>
                <% } %>
              </select>
            </div>
            <div class="divTableCell">
              <input type="text" name="price" placeholder="price" value="<%= allcars[i].price %>"><br>
            </div>
            <div class="divTableCell">
              <input type="submit" value="Ändra" data-meth="PATCH">
            </div>
            <div class="divTableCell">
              <input type="submit" value="Ta bort" data-meth="DELETE">
            </div>

          </form>
        </div>

        <% } %>
      </div>
    </div>

  </div>

  <script src="/js/jquery-3.1.1.min.js" type="text/javascript"></script>
  <script src="/js/main.js" type="text/javascript"></script>
